/* pages/person/person.wxss */
.preson_info {
  background: #FBE5BA;
}

.preson_bg {
  position: relative;
  top: 50rpx;
  left: 0;
  height: 176rpx;
  margin: 0 20rpx;
}

.preson_bg image {
  width: 100%;
  height: 100%;
}

.avatar {
  z-index: 2;
  position: absolute;
  top: 90rpx;
  left: 30rpx;
  justify-content: space-between;
  width: 85%;
}

.avatar image {
  width: 96rpx;
  height: 96rpx;
}

.avatar view {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-left: 24rpx;
}

.avatar .preson_id {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.preson_id text {
  margin-left: 5rpx;
}

.content {
  margin: 75rpx 20rpx;
}

.announcement {
  background: #EFEAF6;
  border-radius: 8rpx;
  padding: 16rpx 10rpx;
  position: relative;
}

.ant-sound-fill {
  color: #F86E21;
}

.announcement_text {
  font-size: 28rpx;
  color: #F86E21;
  margin-left: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right_arrow {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 18rpx;
  right: 10rpx;
}

.right_arrow image {
  width: 100%;
  height: 100%;
}

.person_banner {
  height: 263rpx;
  margin: 24rpx 0 32rpx;
}

.person_banner image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.service_title {
  font-size: 30rpx;
  color: #000000;
}

.collection_img {
  width: 58rpx;
  height: 58rpx;
}

.collection_text {
  font-size: 34rpx;
  color: #000000;
  margin-left: 30rpx;
}

.collection_i {
  color: #C7C7CC;
  text-align: right;
  margin-top: 7rpx;
}
/* pages/collection/collection.wxss */
page {
  background: #F5F6F7;
}

.search_box {
  position: relative;
  margin: 24rpx 0 26rpx;
  padding: 0 20rpx 20rpx;
  border-bottom: 1px solid #DDDDDD;
  background: #fff;
  width: 100%;
}

.search {
  height: 56rpx;
  background: #F6F5F5;
  border-radius: 28rpx;
  padding-left: 80rpx;
  font-size: 30rpx;
  margin-right: 32rpx;
}

.search_icon {
  position: absolute;
  top: 12rpx;
  left: 60rpx;
  color: #BBBBBB;
}

.close_icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 12rpx;
  right: 80rpx;
}

.collection_box {
  background: #fff;
  margin-top: 20rpx;
  padding: 50rpx;
  position: relative;
}

.collection_title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.collection_text {
  font-size: 24rpx;
  color: #333333;
  width: 550rpx;
  margin: 8rpx 0 24rpx;
}

.collection_img {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.collection_img image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}

.material_footer {
  font-size: 24rpx;
  color: #999999;
  justify-content: space-between;
}

.dot_box {
  width: 44rpx;
  height: 23rpx;
  background: #F6F5F5;
  border-radius: 2rpx;
  margin: 25rpx 0 30rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  background: #EBCF9A;
  border-radius: 50%;
  margin: auto;
}

.cancel_collection {
  font-size: 24rpx;
  color: #BBBBBB;
  width: 96rpx;
}

.forward_box {
  background: #666666;
  border-radius: 2rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  padding: 0 20rpx;
  position: absolute;
  bottom: 110rpx;
  right: 110rpx;
}

.forward image {
  width: 27rpx;
  height: 27rpx;
  margin-right: 4rpx;
}

.line {
  height: 24rpx;
  border: 2rpx solid #515151;
  margin: 0 16rpx;
}

.tips {
  width: 640rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  position: fixed;
  top: 35%;
  left: 8%;
  z-index: 999;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  padding: 48rpx 0 30rpx;
}

.tips_text {
  margin: 30rpx 0 46rpx;
}

.tisp_btn {
  font-size: 32rpx;
  color: #EBCF9A;
  padding-top: 30rpx;
  border-top: 1px solid #dddddd;
}

.model {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 998;
}

.notyet {
  font-size: 30rpx;
  color: #BBBBBB;
  position: fixed;
  left: 43%;
  top: 42%;
}
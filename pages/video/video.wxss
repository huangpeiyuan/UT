/* pages/video/video.wxss */
Page {
  width: 100%;
  height: 100%;
}

.video-container {
  width: 100%;
  height: 100%;
}

.video-container qy-video video{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.return {
  position: absolute;
  top: 7%;
  left: 5%;
  color: #FFFFFF;
  z-index: 99;
  font-size: 30rpx;
}

.video_text {
  width: 557rpx;
  z-index: 22;
  position: absolute;
  bottom: 7%;
  left: 5%;
  font-size: 26rpx;
  color: #FFFFFF;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.share_img {
  width: 72rpx;
  height: 72rpx;
  position: absolute;
  z-index: 22;
  bottom: 15%;
  right: 4%;
}

.share_img image {
  width: 100%;
  height: 100%;
}

.share_box {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 456rpx;
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0px 0px;
  z-index: 99;
}

.share_header {
  justify-content: center;
  margin: 20rpx 0 46rpx;
}

.share_line {
  font-size: 28rpx;
  color: #EBCF9A;
  font-weight: Bold;
}

.share_line_title {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin: 0 10rpx;
}

.share_content {
  background: #fff;
  padding: 0;
  font-size: 0;
  font-weight: normal;
}

.wechat_share image {
  width: 88rpx;
  height: 88rpx;
}

.wechat_share view {
  font-size: 24rpx;
  color: #333333;
  margin-top: 16rpx;
}

.line {
  width: 0px;
  height: 137rpx;
  border: 1px solid #DDDDDD;
}

.close_btn {
  width: 176rpx;
  height: 65rpx;
  background: #FFFFFF;
  border: 2rpx solid #EBCF9A;
  border-radius: 33rpx;
  font-size: 24rpx;
  line-height: 65rpx;
  color: #EBCF9A;
  text-align: center;
  margin: 0 auto;
  margin-top: 48rpx;
}